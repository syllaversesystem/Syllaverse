<IfModule mod_negotiation.c>
    Options -MultiViews -Indexes
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
  # If your app is in a subdirectory, set the base (adjust as needed)
  RewriteBase /

  # Ensure index files are recognized
  DirectoryIndex index.php index

    # Protect sensitive directories from direct access
    RewriteRule ^(app|bootstrap|config|database|resources|routes|storage|tests|vendor)/ - [F,L,NC]

    # Block access to sensitive files
    RewriteRule ^(\.env|composer\.(json|lock)|artisan|phpunit\.xml|server\.php)$ - [F,L,NC]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Force the root-level `index` (without extension) to be interpreted as PHP if used
<IfModule mod_mime.c>
  AddType application/x-httpd-php .php
  AddType application/x-httpd-php .html
</IfModule>

<Files "index">
  ForceType application/x-httpd-php
</Files>
